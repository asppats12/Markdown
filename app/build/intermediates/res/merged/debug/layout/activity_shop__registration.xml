<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="#27282b"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dipeshpatel.markdown.Shop_Registration">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/shop_name"
        android:hint="Shop Name"
        android:textColor = "#ffffff"
        android:textColorHint = "#696969"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:ems="10"
        android:id="@+id/shop_address"
        android:hint="Street Address"
        android:textColor = "#ffffff"
        android:textColorHint = "#696969"
        android:layout_below="@+id/shop_name"
        android:layout_alignEnd="@+id/shop_name" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/shop_City"
        android:hint="City"
        android:textColor = "#ffffff"
        android:textColorHint = "#696969"
        android:layout_below="@+id/shop_address"
        android:layout_alignEnd="@+id/shop_address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/shop_State"
        android:hint="State"
        android:textColor = "#ffffff"
        android:textColorHint = "#696969"
        android:layout_below="@+id/shop_City"
        android:layout_alignStart="@+id/shop_City" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/shop_pincode"
        android:hint="Pincode"
        android:textColor = "#ffffff"
        android:textColorHint = "#696969"
        android:layout_below="@+id/shop_State"
        android:layout_alignStart="@+id/shop_State" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/shop_tele"
        android:hint="Contact Number"
        android:textColor = "#ffffff"
        android:textColorHint = "#696969"
        android:layout_below="@+id/shop_pincode"
        android:layout_alignEnd="@+id/shop_pincode" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTER SHOP"
        android:id="@+id/REG_SHOP"
        android:textColor = "#ffffff"
        android:background="@drawable/my_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="shopReg" />
</RelativeLayout>
