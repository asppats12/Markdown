<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:background="#27282b"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.dipeshpatel.markdown.AddNewSale">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/sale_title"
        android:hint="Sale Title"
        android:textColor = "#ffffff"
        android:textColorHint = "#696969"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="46dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor = "#ffffff"
        android:textColorHint = "#696969"
        android:ems="10"
        android:id="@+id/sale_starting"
        android:hint="Starting Date"
        android:layout_below="@+id/sale_title"
        android:layout_alignStart="@+id/sale_title" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:textColor = "#ffffff"
        android:textColorHint = "#696969"
        android:ems="10"
        android:id="@+id/sale_ending"
        android:hint="Last Date"
        android:layout_below="@+id/sale_starting"
        android:layout_alignStart="@+id/sale_starting" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textMultiLine"
        android:textColor = "#ffffff"
        android:textColorHint = "#696969"
        android:ems="10"
        android:id="@+id/sale_details"
        android:hint="Enter Sale Details"
        android:layout_below="@+id/sale_ending"
        android:layout_alignEnd="@+id/sale_ending" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SUBMIT"
        android:id="@+id/addSale"
        android:background = "@drawable/my_button"
        android:textColor = "#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:onClick="submitSale" />

</RelativeLayout>
